<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
  <constant name="struts.devMode" value="true" />

    <package name="json-default" extends="struts-default">
      <result-types>
        <result-type name="json" class="org.apache.struts2.json.JSONResult"/>
      </result-types>
      <interceptors>
        <interceptor name="json" class="org.apache.struts2.json.JSONInterceptor"/>
      </interceptors>
    </package>

    <package name="default" extends="json-default">
      <action name="login" class="by.bsuir.spp.ils.lab.controller.actions.AuthAction" method="login">
        <interceptor-ref name="json">
          <param name="contentType">application/json</param>
        </interceptor-ref>
        <result type="json"/>
        <result name="error" type="json"/>
        <result name="input" type="json"/>
      </action>

      <action name="logout" class="by.bsuir.spp.ils.lab.controller.actions.AuthAction" method="logout">
        <result type="json"/>
        <result name="error" type="json"/>
        <result name="input" type="json"/>
      </action>

      <action name="register" class="by.bsuir.spp.ils.lab.controller.actions.AuthAction" method="register">
        <interceptor-ref name="json">
          <param name="contentType">application/json</param>
        </interceptor-ref>
        <result type="json"/>
        <result name="error" type="json"/>
        <result name="input" type="json"/>
      </action>

      <action name="check" class="by.bsuir.spp.ils.lab.controller.actions.AuthAction" method="check">
        <result type="json"/>
        <result name="input" type="json"/>
      </action>

      <action name="create_user" class="by.bsuir.spp.ils.lab.controller.actions.UserAction" method="create">
        <interceptor-ref name="json">
          <param name="contentType">application/json</param>
        </interceptor-ref>
        <result type="json"/>
        <result name="input" type="json"/>
      </action>

      <action name="delete_user" class="by.bsuir.spp.ils.lab.controller.actions.UserAction" method="delete">
        <result name="input" type="json"/>
        <result type="json"/>
      </action>

      <action name="read_user" class="by.bsuir.spp.ils.lab.controller.actions.UserAction" method="read">
        <result type="json"/>
        <result name="input" type="json"/>
      </action>

      <action name="list_users" class="by.bsuir.spp.ils.lab.controller.actions.UserAction" method="list">
        <result type="json"/>
      </action>

      <action name="create_team" class="by.bsuir.spp.ils.lab.controller.actions.TeamAction" method="create">
        <interceptor-ref name="json">
          <param name="contentType">application/json</param>
        </interceptor-ref>
        <result type="json"/>
      </action>

      <action name="list_teams" class="by.bsuir.spp.ils.lab.controller.actions.TeamAction" method="read">
        <result type="json"/>
      </action>

      <action name="edit_team" class="by.bsuir.spp.ils.lab.controller.actions.TeamAction" method="update">
        <interceptor-ref name="json">
          <param name="contentType">application/json</param>
        </interceptor-ref>
        <result type="json"/>
      </action>

      <action name="delete_team" class="by.bsuir.spp.ils.lab.controller.actions.TeamAction" method="delete">
        <result type="json"/>
      </action>

      <action name="create_event" class="by.bsuir.spp.ils.lab.controller.actions.EventAction" method="create">
        <interceptor-ref name="json">
          <param name="contentType">application/json</param>
        </interceptor-ref>
        <result type="json"/>
      </action>

      <action name="list_events" class="by.bsuir.spp.ils.lab.controller.actions.EventAction" method="read">
        <result type="json"/>
      </action>

      <action name="edit_event" class="by.bsuir.spp.ils.lab.controller.actions.EventAction" method="update">
        <interceptor-ref name="json">
          <param name="contentType">application/json</param>
        </interceptor-ref>
        <result type="json"/>
      </action>

      <action name="delete_event" class="by.bsuir.spp.ils.lab.controller.actions.EventAction" method="delete">
        <result type="json"/>
      </action>
    </package>
</struts>